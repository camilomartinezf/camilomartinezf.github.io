<%= form_for @users do |form| %>
<!-- form_for is my best friend, does lots -->
  <div class="form-group">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, class: "form-control" %>
    <%= form.label :member_id %>
    <%= form.text_field :member_id, class: "form-control" %>
     <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
     <%= form.label :password%>
    <%= form.text_field :password, class: "form-control" %>
     <%= form.label :telephone %>
    <%= form.text_field :telephone, class: "form-control" %>
     <%= form.label :homeaddress %>
    <%= form.text_field :homeaddress, class: "form-control" %>
     <%= form.label :birthday %>
    <%= form.text_field :birthday, class: "form-control" %>
    <%= form.label :age %>
    <%= form.text_field :age, class: "form-control" %>
   <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>
  <%= form.button 'Update User', class: "btn btn-success" %>
<% end %>