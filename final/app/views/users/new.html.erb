<form action="/users" method="POST">
 
  <div class="form-group">
    <label for="name">Name of the User</label>
    <input type="text" class="form-control" id="name" placeholder="Enter the name of the user">
  </div>

  <div class="form-group">
    <label for="summary">Email</label>
    <input type="text" class="form-control" id="email" placeholder="email address?">
  </div>

  <div class="form-group">
    <label for="year_released">Birthday</label>
    <input type="text" class="form-control" id="birthday" placeholder="What's the birthday?'">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

</form>